@model List<ControlHrsConsultoria.Models.ViewModel.ProyectoViewModel>
@{
    ViewBag.Title = "Administrador";
}
<br />
<br />
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="active"><a href="~/Proyecto/">Proyectos</a></li>
            <li role="presentation"><a href="~/Usuario/">Usuarios</a></li>
            <li role="presentation"><a href="#">Consultores</a></li>
            <li role="presentation"><a href="#">Clientes</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-2"> Proyectos</div>
                    <div class="col-md-8"></div>
                    <div class="col-md-2"><a href="~/Proyecto/Nuevo" class="btn btn-primary">Nuevo Proyecto</a></div>
                </div>
                
            </div>

            <!-- Table -->
            <table class="table">
                <tr>
                    <td>#</td>
                    <td>Nombre</td>
                    <td>Descripción</td>
                    <td>Precio $</td>
                    <td>Costo</td>
                    <td>Fecha Inicio</td>
                    <td>Fecha Final</td>
                    <td>Status</td>
                    <td>Acciones</td>
                </tr>
                @foreach (var oElemento in Model)
                {
            <tr>
                <td>@oElemento.IdProyecto</td>
                <td>@oElemento.Nombre</td>
                <td>@oElemento.Descripcion</td>
                <td>@oElemento.MontoPrecio</td>
                <td>@oElemento.Costo</td>
                <td>@oElemento.FechaInicio</td>
                <td>@oElemento.FechaFinal</td>
                <td>@oElemento.Status</td>
                <td>
                    <a class="btn btn-default" href="~/Proyecto/Editar/@oElemento.IdProyecto">Editar</a>
                    <a class="btn btn-danger" href="~/Proyecto/Eliminar/@oElemento.IdProyecto">Eliminar</a>
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>
