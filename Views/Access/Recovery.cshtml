@model ControlHrsConsultoria.Models.ViewModel.RecoveryPasswordViewModel
@{
    ViewBag.Title = "Recovery";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="form-style">
            <form action="@Url.Content("~/Access/Recovery")" method="post">
                @Html.HiddenFor(d => d.token)
                <label>Escribe tu nueva contraseña</label>
                @Html.PasswordFor(d => d.password, new { @class = "form-control", placeholder = "Nueva contraseña" })
                @Html.ValidationMessageFor(d => d.password, null, new { style = "color:red;" })

                <label>Vuelve a escribir tu contraseña</label>
                @Html.PasswordFor(d => d.password2, new { @class = "form-control", placeholder = "Nueva contraseña" })
                @Html.ValidationMessageFor(d => d.password2, null, new { style = "color:red;" })
                <br />
                <div class="text-right">
                    <button class="btn btn-primary">Recuperar</button>
                </div>
            </form>
        </div>
    </div>
</div>