@model List<ControlHrsConsultoria.Models.ViewModel.ListUsuarioViewModel>
@{
    ViewBag.Title = "Administrador";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    
    <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation"><a href="~/Proyecto/">Proyectos</a></li>
            <li role="presentation" class="active"><a href="#">Usuarios</a></li>
            <li role="presentation"><a href="#">Consultores</a></li>
            <li role="presentation"><a href="#">Clientes</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-2">Usuarios</div>
                    <div class="col-md-8"></div>
                    <div class="col-md-2"><a href="~/Usuario/Nuevo" class="btn btn-primary" >Agregar usuario</a></div>
                </div>
            </div>

            <!-- Table -->
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo eléctronico</th>
                    <th>Fecha de registro</th>
                    <th>Estatus</th>
                    <th>Acciones</th>
                </tr>
                @foreach (var lstElemento in Model)
                {
                    <tr>
                        <td>@lstElemento.idUsuario</td>
                        <td>@lstElemento.nombre</td>
                        <td>@lstElemento.apellidos</td>
                        <td>@lstElemento.correo</td>
                        <td>@lstElemento.fechaRegistro</td>
                        <td>@lstElemento.status</td>
                        <td>
                            <a class="btn btn-default" href="~/Usuario/Editar?idUsuario=@lstElemento.idUsuario">Editar</a>
                            <a class="btn btn-danger" href="~/Usuario/Eliminar?idUsuario=@lstElemento.idUsuario">Eliminar</a>

                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


